    <select id="getCompanyInfoByCode" parameterType="String" resultMap="companyResultMap">
        /* 업체상세 정보조회 */
        SELECT
        ci.company_code
        ,ct.company_type
        ,ci.Company_reg_num
        ,ci.member_id
        ,ci.Company_tel
        ,ci.Company_addr
        ,ci.Company_name
        ,ci.apply_date
        ,ci.approval_status
        ,ci.approval_denied_content
        ,ci.admin_id
        ,ci.approval_date
        ,fl.breeder_level_name
        ,ci.reg_password
        ,ci.farm_cnt
        FROM
            company_info as ci
            inner join
            company_type as ct
            on
            ci.company_type_num = ct.company_type_num
            inner join
            farm_level as fl
            on
            ci.farm_level_num = fl.farm_level_num
        WHERE
            company_code = #{companyCode};

    </select>

    <select id="getCompanyTypeList" resultType="CompanyType">
        /* 업체 종류 조회 */
        SELECT
            ct.company_type_num as companyTypeNum
            ,ct.company_type as companyType
            ,ct.reg_date as regDate
            ,ct.admin_id as adminId
        FROM
            company_type as ct;
    </select>

    <select id="getCompanyList" parameterType="String" resultMap="companyResultMap">
        /* 업체 목록 조회 */
        SELECT
            ci.company_code
            ,ct.company_type
            ,ci.company_reg_num
            ,ci.member_id
            ,ci.company_tel
            ,ci.company_addr
            ,ci.company_name
            ,ci.apply_date
            ,ci.approval_status
            ,ci.approval_denied_content
            ,ci.admin_id
            ,ci.approval_date
            ,ci.farm_level_num
            ,ci.reg_password
            ,ci.farm_cnt
        FROM
            company_info as ci
            inner join
            company_type as ct
            on
            ci.company_type_num = ct.company_type_num;
    </select>
</mapper>